<div class="container">
    <div class="row">
        <div class="col-md-2">
            <div>
                <span>Current Score: </span><span>{{userScore}}</span>
            </div>
        </div>
        <div class="col-md-8 well">
            <div id="startButton">
                <button class="btn btn-primary" id='startGame' {{action "startGame"}} hidden={{startDisabled}}>Start Game</button>
            </div>
            <div id="question">
                <!--Question will be here-->
            </div>
            <br/>
            <div class="container" id="answerButtons">
                <div class="row">
                    <div class="col-md-4">
                        <button id='answer1' class="btn btn-primary" style="display:none" {{action "submitAnswer"}}>Answer 1</button>
                        <br/>
                        <button id='answer2' class="btn btn-primary" style="display:none" hidden=true {{action "submitAnswer"}}>Answer 2</button>
                    </div>
                    <div class="col-md-4">
                        <button id='answer3' class="btn btn-primary" style="display:none" hidden=true {{action "submitAnswer"}}>Answer 3</button>
                        <br/>
                        <button id='answer4' class="btn btn-primary" style="display:none" hidden=true {{action "submitAnswer"}}>Answer 4</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div>
                <span>Current Tries: </span><span>{{currentTries}}</span>
            </div>
        </div>
    </div>
</div>
